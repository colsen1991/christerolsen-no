.header
  background #FF6B00
  padding 2em 2em 0 2em
  position relative

  h1
    font-size 3rem
    margin-top 0
    margin-bottom 1rem
    text-align center

    a:focus
      outline none

  a
    color #000000
    margin 0
    
  nav
    display flex
    
    input
      position absolute
      right 2em
    
    a
      margin 0 1em
      padding 0.5em

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

      &:hover
        color #F5F5F5

    .activeLink
      border-bottom 3px solid #000000

    .inactiveLink
      border-bottom 3px solid #FF6B00
