.siteHeader
  background #FF6B00
  display flex
  align-items center
  flex-direction column

  h1
    font-size 3rem

  a
    color #000000

  nav
    display flex

    a
      margin 0 1em
      padding 1em

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

      &:hover
        color #F5F5F5

    .activeLink
      border-bottom 3px solid #000000

    .inactiveLink
      border-bottom 3px solid #FF6B00
