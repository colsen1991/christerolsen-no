.blog
  h1:first-child
    margin-top 0

  img
    display block
    margin 0 auto

.excerpt
  .linkable
    display block

  h1
    font-size 3rem
    margin 1rem 0

  p
    margin-bottom 2em

.excerptListWrapper
  margin 2em 0

  &:first-child
    margin-top 0

  &:last-child
    margin-bottom 0

.line
  border-color #171717

.error
  color: #FF2B2B

.newOrEditForm
  display flex
  flex-direction column
  min-height 600px
  width 100%

  input[type="submit"]
    width 7.5em

  input[type="text"],
  input[type="url"]
    width 40em
    margin-bottom 1em

  textarea
    width 100%
    height 5em
    resize vertical
    margin-bottom 1em

  .postTextarea
    height 40em

  input[type="checkbox"]
    margin-bottom 1em
