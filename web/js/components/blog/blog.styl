.blog
  width 100%

  h1:first-child
    margin-top 0

  img
    display block
    margin 0 auto

.excerpt
  .linkable
    display block
    position relative
    color inherit

    h1
      font-size 4rem
      margin 0
      position absolute
      bottom 10%
      background rgba(0, 0, 0, 0.5)
      padding 1rem

      @media screen and (max-width: 640px)
        font-size 3rem
  
  img
    width 100%

.line
  border-color #171717

.error
  color: #FF2B2B

.success
  color: #09FF00

.newOrEditForm
  display flex
  flex-direction column
  min-height 655px
  width 100%

  input[type="submit"]
    width 7.5em

  input[type="text"],
  input[type="url"]
    width 75%
    margin-bottom 1em

  textarea
    height 5em
    resize vertical
    margin-bottom 1em

  .postTextarea
    height 30em

  input[type="checkbox"]
    margin-bottom 1em
