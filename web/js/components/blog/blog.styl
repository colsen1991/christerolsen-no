.blog
  width 100%

  h1:first-child
    margin-top 0

  img
    display block
    margin 0 auto

.excerpt
  .linkable
    display block

  h1
    font-size 3rem
    margin 0

.line
  border-color #171717

.error
  color: #FF2B2B

.success
  color: #09FF00

.newOrEditForm
  display flex
  flex-direction column
  min-height 655px
  width 100%

  input[type="submit"]
    width 7.5em

  input[type="text"],
  input[type="url"]
    width 75%
    margin-bottom 1em

  textarea
    height 5em
    resize vertical
    margin-bottom 1em

  .postTextarea
    height 30em

  input[type="checkbox"]
    margin-bottom 1em
