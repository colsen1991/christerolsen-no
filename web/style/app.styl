html
  font-family 'Roboto Slab', serif
  font-size 16px
  overflow-y scroll
  color #F5F5F5

@media screen and (max-width: 480px)
  html
    font-size 12px

body, button, input, p, span, a, h1, h2, h3, header, footer, nav, div
  font-family inherit
  font-size inherit

input
  border none

button,
input[type="password"],
input[type="text"]
  &:disabled
    background-color #D3D3D3

input[type="submit"]
  cursor pointer
  background-color #FF6B00
  color #000000
  font-weight bold

  &:hover
    color #F5F5F5

  &:disabled
    background-color #965A1B

button
  background-color #FF6B00
  border none
  color #000000

  &:hover
    color #F5F5F5

body
  background #171717
  margin 0

input
  color #000000
  padding 0.5em

img
  max-height 100%
  max-width 100%

a
  text-decoration none
  color #FF6B00

  &:hover
    color #000000
    
  &[disabled]
    pointer-events: none

time
  font-weight lighter
  font-style: italic

:global(#app-root)
  max-width 1024px
  min-width 320px
  margin 0 auto
