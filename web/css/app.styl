html
  font-family 'Roboto Slab', serif
  font-size 16px / 24px
  overflow-y scroll
  color #F5F5F5

body, button, input, p, span, a, h1, h2, h3, header, footer, nav, div
  font-family inherit

button
  background-color #FF6B00
  border none

body
  background #171717

input
  color #000000
  padding 0.5em

img
  max-height 100%
  max-width 100%

a
  text-decoration none
  color #F5F5F5

  &:hover
    color #000000

:global(#app-root)
  max-width 1024px
  min-width 480px
  margin 0 auto
